{
  "name": "mod-localizer-backend",
  "version": "1.0.0",
  "description": "MCMOD汉化工具后端",
  "main": "server.js",
  "bin": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "package": "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --output-path ./dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "adm-zip": "^0.5.10",
    "openai": "^4.20.0",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "pkg": "^5.8.0"
  },
  "pkg": {
    "scripts": ["*.js", "routes/*.js", "services/*.js"],
    "assets": ["../frontend/dist/**/*"],
    "targets": ["node18-win-x64", "node18-macos-x64", "node18-linux-x64"]
  },
  "keywords": ["minecraft", "mod", "localization"],
  "author": "",
  "license": "MIT"
}

